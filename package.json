{
  "name": "@hexonet/semantic-release-whmcs",
  "description": "`semantic-release` plugin for auto-publishing on WHMCS marketplace",
  "version": "3.0.2",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Kai Schwarz",
    "email": "kschwarz@hexonet.net"
  },
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=10.18.0",
    "npm": ">=6.14.8"
  },
  "homepage": "https://github.com/hexonet/semantic-release-whmcs#readme",
  "repository": "github:hexonet/semantic-release-whmcs",
  "bugs": "https://github.com/hexonet/semantic-release-whmcs/issues",
  "maintainers": [
    {
      "name": "Kai Schwarz",
      "email": "kschwarz@hexonet.net"
    }
  ],
  "keywords": [
    "whmcs",
    "marketplace",
    "hexonet",
    "publish",
    "release",
    "semantic-release",
    "version"
  ],
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "json",
      "text",
      "html"
    ],
    "all": true
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "scripts": {
    "coverage": "nyc npm run test",
    "test": "ava --verbose --timeout=2m",
    "lint": "eslint --fix --config=./.eslintrc.js *.js lib/*.js lib/definitions/*.js README.md *.json test/*.test.js",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@octokit/core": "^3.2.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "ava": "^3.13.0",
    "debug": "^4.2.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "esm": "^3.2.25",
    "nyc": "^15.1.0",
    "semantic-release": "^17.2.1"
  },
  "dependencies": {
    "@semantic-release/error": "^2.2.0",
    "aggregate-error": "^3.1.0",
    "github-api": "^3.4.0",
    "puppeteer": "^9.0.0",
    "sinon": "^10.0.0",
    "yargs": "^16.2.0"
  }
}
